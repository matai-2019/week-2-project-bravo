<form method="POST" action="">
    <h3>Submit your stress level</h3>
    <input name="userName" type="text" hidden value="{{name}}">
    <input name="stressLevel" type="text" hidden value='0'>
    <button class="btn btn-primary" type="submit" value="submit">
        Submit
    </button>
</form>



<script>
  let stressLevel = document.querySelector('input[name="stressLevel"]')
  const name = document.querySelector('input[name="userName"]').value
  let form = document.querySelector('form[method="POST"]')

  function changeInput(event) {
    const value = event.target.textContent
    
    // Set Attributes
    stressLevel.setAttribute('value', value)
    form.setAttribute('action', `/welcome/${name}/${value}`)
  }
</script>